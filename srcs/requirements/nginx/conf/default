server {
	listen	80 default_server;

	server_name	_;

	return 301 https://$host$request_uri;

}

server {
	listen 443 ssl;
	listen [::]:443 ssl; # pour les ipv6

	server_name ltuffery.42.fr;

	ssl_certificate_key /ect/ssl/ltuffery.key;
	ssl_certificate /ect/ssl/ltuffery.crt;
	ssl_protocols TLSv1.3; # version du protocol

	index index.php;
	root /var/www/wordpress;

	location / {
        try_files $uri $uri/ /index.php$is_args$args;
    }
    location ~ [^/].php(/|$) { 
		try_files $uri = 404;
		fastcgi_split_path_info ^(.+.php)(/.+)$;
		fastcgi_pass wordpress:9000;
		fastcgi_index index.php; # give index name for params
        include fastcgi_params; # let use fast cgi params

        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
		fastcgi_param PATH_INFO $fastcgi_path_info;
    }
}